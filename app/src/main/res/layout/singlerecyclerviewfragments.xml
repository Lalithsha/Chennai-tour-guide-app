<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius= "5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <ImageView
            android:id="@+id/image_single_recyclerView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img1marina" />


        <TextView
            android:id="@+id/thing_name_single_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_single_recyclerView"
            android:gravity="center_vertical"
            android:text="Name of the place"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/address_single_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_single_recyclerView"
            android:layout_below="@id/thing_name_single_recyclerView"
            android:text="Address"
            android:textSize="20dp"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>